<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="args"
        type="com.example.todo.data.models.ToDoData" />
</data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryBackground"
        tools:context=".fragments.checklist.UpdateCheckListFragment">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:title="Doist"
            app:titleTextColor="?attr/colorControlNormal"
            android:background="@color/primaryColor"
            android:fitsSystemWindows="true"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    tools:ignore="UselessParent">


                    <EditText
                        android:id="@+id/title_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:background="@android:color/transparent"
                        android:paddingVertical="10dp"
                        android:hint="@string/title"
                        android:text="@{args.title}"
                        android:inputType="textPersonName"
                        android:textColor="@color/titleTextColor"
                        android:textStyle="bold"
                        android:importantForAutofill="no" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_below="@id/title_et"
                        android:id="@+id/timeLayout"
                        android:layout_height="25dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="italic"
                            android:id="@+id/time_text"
                            android:text="@{args.date}"
                            tools:text="27th Dec 2020"
                            android:getCurrentTime="@{true}"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="8dp"
                            android:layout_marginStart="5dp"
                            android:setReminder="@{args.reminder}"
                            android:visibility="gone"
                            android:id="@+id/reminderLayout"
                            android:background="@drawable/media_player_background"
                            android:backgroundTint="@color/lightGray">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_baseline_access_alarm_24"
                                android:layout_alignParentStart="true"
                                android:contentDescription="@string/alarm"
                                android:id="@+id/alarm"
                                android:clickable="false"
                                app:tint="@color/darkGray" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:id="@+id/reminderText"
                                android:clickable="false"
                                android:layout_marginStart="6dp"
                                android:layout_toEndOf="@id/alarm"
                                android:textColor="@color/darkGray"
                                android:layout_centerInParent="true"
                                tools:text="20 Mar,1800"/>
                        </RelativeLayout>

                    </LinearLayout>
                    <org.angmarch.views.NiceSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundSelector="@drawable/background_selector"
                        android:textStyle="bold"
                        android:background="@color/primaryBackground"
                        android:getPriorityColor="@{args.priority}"

                        android:textSize="16sp"
                        android:padding="15dp"
                        android:id="@+id/priorities_spinner"
                        android:layout_below="@id/timeLayout" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/task"
                        android:layout_marginTop="3dp"
                        android:layout_below="@id/priorities_spinner"
                        android:getPriorityColor="@{args.priority}"
                        app:hintEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_add"
                            android:drawableTint="@color/secondaryColor"
                            android:id="@+id/task" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nameLayout"
                        android:layout_marginTop="10dp"
                        android:id="@+id/recyclerView"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>