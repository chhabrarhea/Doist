<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expanded"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/style"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
        android:layout_width="55dp"
            android:id="@+id/pen"
            app:cardBackgroundColor="@color/secondaryColor"
        android:layout_height="55dp"
        app:cardCornerRadius="250dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:clickable="false"
            android:layout_height="50dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_margin="7dp"
                android:layout_height="35dp"
                android:clickable="false"
                android:src="@drawable/ic_pen"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:id="@+id/eraser"
            android:layout_marginStart="20dp"
            android:layout_height="55dp"
            app:cardCornerRadius="250dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:clickable="false"
                android:layout_height="50dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_margin="7dp"
                    android:layout_height="35dp"
                    android:clickable="false"
                    android:src="@drawable/ic_eraser"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:id="@+id/delete"
            android:layout_marginStart="20dp"
            android:layout_height="55dp"
            app:cardCornerRadius="250dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:clickable="false"
                android:layout_height="50dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_margin="7dp"
                    android:layout_height="35dp"
                    android:clickable="false"
                    android:src="@drawable/ic_baseline_delete_24"
                    app:tint="#000000"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/style"
        android:layout_height="wrap_content"
        android:id="@+id/brush"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:id="@+id/ib_5_brush"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/white">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:clickable="false"
                android:layout_margin="1dp"
                android:layout_height="30dp"
                app:cardCornerRadius="120dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/darkGray"
                    android:clickable="false" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:id="@+id/ib_10_brush"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/white">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:clickable="false"
                android:layout_margin="1dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:layout_height="10dp"
                    app:cardCornerRadius="21dp"
                    app:cardBackgroundColor="@color/darkGray"
                    android:clickable="false"

                    />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="120dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/ib_15_brush"
            app:cardBackgroundColor="@color/white">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:clickable="false"
                android:layout_margin="1dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="15dp"
                    android:layout_gravity="center"
                    android:layout_height="15dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/darkGray"
                    android:clickable="false"

                    />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="120dp"
            android:id="@+id/ib_17_brush"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/white">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:clickable="false"
                android:layout_margin="1dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="17dp"
                    android:layout_margin="10dp"
                    android:layout_height="17dp"
                    app:cardCornerRadius="120dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/darkGray"
                    android:clickable="false" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:id="@+id/ib_20_brush"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/white">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:clickable="false"
                android:layout_margin="1dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardCornerRadius="120dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/darkGray"
                    android:clickable="false" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:id="@+id/ib_25_brush"
            android:padding="5dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="@color/white">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:clickable="false"
                android:layout_margin="1dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:layout_height="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/darkGray"
                    android:clickable="false" />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palette"
        android:padding="10dp"
        android:layout_below="@id/brush"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
        android:id="@+id/green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
           app:cardBackgroundColor="@color/low"
            app:cardCornerRadius="20dp"
        
        android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check1"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/light_blue_900"
            app:cardCornerRadius="20dp"
            
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check2"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="#000"
            app:cardCornerRadius="20dp"
            
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check3"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/brown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/brown"
            app:cardCornerRadius="20dp"
            
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cyan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp"
            
            android:layout_marginEnd="10dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check4"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/pink"
            app:cardCornerRadius="20dp"
            
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check5"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/purple"
            app:cardCornerRadius="20dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check6"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>