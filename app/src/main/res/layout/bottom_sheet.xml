<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expanded"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/brush"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ib_5_brush"
            android:layout_marginEnd="10dp"
            android:padding="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="5dp"
            android:layout_height="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/darkGray"
           android:layout_centerInParent="true"
            android:src="@drawable/small" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/ib_10_brush"
            android:layout_gravity="center_vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/darkGray"
            android:layout_centerInParent="true"
            android:src="@drawable/small"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ib_15_brush"
            android:layout_marginEnd="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/small"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/darkGray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ib_17_brush"
            android:layout_marginEnd="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/small"
            android:layout_centerInParent="true"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/darkGray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ib_20_brush"
            android:layout_marginEnd="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/small"
            app:cardCornerRadius="20dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/darkGray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ib_25_brush"
            android:layout_marginEnd="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
           android:layout_centerInParent="true"
            android:src="@drawable/small"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/darkGray"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palette"
        android:padding="10dp"
        android:layout_below="@id/brush"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
        android:id="@+id/green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
           app:cardBackgroundColor="@color/low"
            app:cardCornerRadius="20dp"
        android:src="@drawable/medium"
        android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check1"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/light_blue_900"
            app:cardCornerRadius="20dp"
            android:src="@drawable/medium"
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check2"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="#000"
            app:cardCornerRadius="20dp"
            android:src="@drawable/medium"
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check3"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/brown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/brown"
            app:cardCornerRadius="20dp"
            android:src="@drawable/medium"
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cyan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp"
            android:src="@drawable/medium"
            android:layout_marginEnd="10dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="20dp"
            android:src="@drawable/medium"
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check4"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/pink"
            app:cardCornerRadius="20dp"
            android:src="@drawable/medium"
            android:layout_marginEnd="10dp" >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check5"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/purple"
            app:cardCornerRadius="20dp"
            android:src="@drawable/medium">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check6"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>