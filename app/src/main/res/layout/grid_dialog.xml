<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="2"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/view2"
                android:layout_width="70dp"
                android:clickable="false"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:elevation="12dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_grid_texture" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:text="Grid"
                android:textColor="#000" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/isometric"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="12dp"
                android:clickable="false"
                android:id="@+id/view3"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_isometric_texture"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isometric"
                android:clickable="false"
                android:layout_below="@id/view3"
                android:layout_centerHorizontal="true"
                android:textColor="#000"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/ruled"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="12dp"
                android:clickable="false"
                android:id="@+id/view4"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_ruled_texture"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruled"
                android:clickable="false"
                android:layout_below="@id/view4"
                android:layout_centerHorizontal="true"
                android:textColor="#000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/none"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="12dp"
                android:clickable="false"
                android:id="@+id/view5"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:background="#e2e2e2"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:clickable="false"
                android:layout_below="@id/view5"
                android:layout_centerHorizontal="true"
                android:textColor="#000"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:text="Cancel"
            android:paddingHorizontal="30dp"
            android:background="@drawable/media_player_background"
            app:backgroundTint="@color/secondaryColor"
            />

    </RelativeLayout>


</LinearLayout>